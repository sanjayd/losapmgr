!!! 5
%html
  %head
    %title LOSAP Manager
    = stylesheet_link_tag 'application', :media => "all"
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse
      .navbar-inner
        %a.brand(href = '#')LOSAP Manager
        .container.pull-right
          %p.navbar-text Hello, user!
    .container
      - if notice
        .alert.alert-success
          %button.close(data-dismiss='alert' type='button') &times;
          = notice
      - if alert
        .alert
          %button.close(data-dismiss='alert' type='button') &times;
          = alert
      = yield
